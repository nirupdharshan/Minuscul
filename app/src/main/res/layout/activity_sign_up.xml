<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goodbg"
    android:id="@+id/bglayout"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.fuku.minuscul.SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who are you?"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="28dp"
                android:id="@+id/studentLayout"
                android:src="@drawable/student"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STUDENT"
                android:id="@+id/student_textview"
                android:padding="5dp"
                android:layout_marginLeft="28dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="28dp"
                android:id="@+id/teacherLayout"
                android:src="@drawable/teacher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEACHER"
                android:id="@+id/teacher_textview"
                android:layout_marginRight="28dp"
                android:padding="5dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>



    </LinearLayout>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="username"
        android:paddingStart="10dp"
        android:textColor="#A1a1a1"
        android:inputType="textNoSuggestions"
        android:maxLength="30"
        android:textColorHint="#55000000"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_bg"
        android:padding="5dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="email"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textColor="#A1a1a1"
        android:inputType="textEmailAddress"
        android:textColorHint="#55000000"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_bg"
        android:padding="5dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Spinner temporary"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:fontFamily="sans-serif"
        android:textColorHint="#55000000"
        android:textColor="#A1a1a1"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_bg"
        android:padding="5dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:paddingStart="10dp"
        android:fontFamily="sans-serif"
        android:textColorHint="#55000000"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:textColor="#A1a1a1"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_bg"
        android:padding="5dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="confirm password"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textColor="#A1a1a1"
        android:textColorHint="#55000000"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_bg"
        android:padding="5dp"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_marginTop="8dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/my_button_bg"
        android:id="@+id/SignUp_button"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:text="Have an account already ?"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="SIGN IN"
            android:id="@+id/SignIn"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>